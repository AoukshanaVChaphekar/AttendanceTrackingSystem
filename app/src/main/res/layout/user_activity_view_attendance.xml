<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserUi.viewAttendance">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            android:text="Date"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/codeCourse"
            android:text="Course Code"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/date"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idF"
            android:text="Faculty"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/codeCourse"
            android:layout_margin="10dp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status"
            android:text="Status"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/idF"
            android:layout_margin="10dp"
            android:textStyle="bold"
            />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:scrollbarSize="@dimen/activity_horizontal_margin"
    android:fadeScrollbars="false"
    android:layout_below="@+id/idF"
    android:id="@+id/scroll">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:id="@+id/userRv"
            android:layout_below="@+id/codeCourse"
            android:layout_marginTop="10dp"
            tools:listitem="@layout/user_view_attendance_list_row"
            />
</ScrollView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#4CAF50"
            android:id="@+id/linearLayout"
            android:layout_below="@+id/scroll"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:id="@+id/present"
            android:text="Status"
            android:textSize="32dp"
            android:layout_below="@+id/userRv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingRight="25dp"
                android:id="@+id/presentTextView"
                android:paddingBottom="5dp"
                android:text="Present"
                android:textSize="26dp"
                android:layout_below="@+id/userRv"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#EA1A0B"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/linearLayout"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/scroll"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:id="@+id/absent"
                android:text="Status"
                android:textSize="32dp"
                android:layout_below="@+id/userRv"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingRight="25dp"
                android:id="@+id/absentTextView"
                android:paddingBottom="5dp"
                android:text="Absent"
                android:textSize="26dp"
                android:layout_below="@+id/userRv"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                />
        </LinearLayout>



    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>